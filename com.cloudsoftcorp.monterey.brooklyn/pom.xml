            <groupId>com.cloudsoftcorp.monterey</groupId>
            <artifactId>com.cloudsoftcorp.monterey.sshlab</artifactId>
            <version>${monterey.version}</version>
        </dependency>
        <dependency>
            <groupId>com.cloudsoftcorp.monterey</groupId>
            <artifactId>com.cloudsoftcorp.monterey.simulator</artifactId>
            <version>${monterey.version}</version>
        </dependency>

        <!-- TODO which test framework should be used - including both seems bad -->
        <dependency>
            <groupId>brooklyn</groupId>
            <artifactId>brooklyn-test-support</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.cloudsoftcorp.monterey</groupId>
            <artifactId>com.cloudsoftcorp.monterey.management.tests</artifactId>
            <version>${monterey.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>cloudsoft-internal-snapshots</id>
            <url>http://releng1.cloudsoftcorp.com/downloads/maven2/snapshots/</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>
