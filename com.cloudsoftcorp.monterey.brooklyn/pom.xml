    </properties>

    <dependencies>
		<dependency>
			<groupId>brooklyn</groupId>
			<artifactId>brooklyn-extra</artifactId>
		</dependency>

		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
		</dependency>

        <!-- TODO this should probably come from one or all monterey depdendencies -->
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.3.0</version>
        </dependency>

        <!--
        <dependency>
            <groupId>com.cloudsoftcorp.monterey</groupId>
            <artifactId>com.cloudsoftcorp.monterey.activemq</artifactId>
            <version>${monterey.version}</version>
        </dependency>
        -->
        <dependency>
            <groupId>com.cloudsoftcorp.monterey</groupId>
            <artifactId>com.cloudsoftcorp.monterey.amqp</artifactId>
            <version>${monterey.version}</version>
        </dependency>
        <dependency>
            <groupId>com.cloudsoftcorp.monterey</groupId>
            <artifactId>com.cloudsoftcorp.monterey.jclouds</artifactId>
            <version>${monterey.version}</version>
        </dependency>
